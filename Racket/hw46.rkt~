(define ToH
  (lambda (disks source spare target)
    (if (= disks 1)
        (string-append "Move top disk from " source " to " target)
        (string-append (ToH (- disks 1) source target spare)
                       ",\n" "Move top disk on " source " to " target ",\n" 
                       (ToH (- disks 1) spare target source)))))

(display (ToH 2 "NY" "LA" "DC")) (newline) (newline)
